# Include README and license files
include README.md
include LICENSE
include requirements.txt

# Include package data
recursive-include map_locations *.py
recursive-include map_locations *.yaml
recursive-include map_locations *.yml

# Include test files
recursive-include tests *.py
recursive-include tests *.yaml
recursive-include tests *.yml

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Exclude common files that shouldn't be included
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg
global-exclude *.egg-info
global-exclude .pytest_cache
global-exclude .coverage
global-exclude .mypy_cache
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude env
global-exclude .env
